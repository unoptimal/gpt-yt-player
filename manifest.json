{
    "manifest_version": 3,
    "name": "ChatGPT YouTube Player",
    "version": "1.0",
    "description": "Plays YouTube videos while waiting for ChatGPT responses.",
    "content_scripts": [
        {
            "matches": ["https://chat.openai.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],      
    "background": {
      "service_worker": "background.js"
    },
    "icons": { 
          "128": "logo.png" 
        },
   "action": {
      "default_popup": "popup.html"
    } 
}
